<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/astroEventNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Solar Eclipse"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/astroEventLowVisibilityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12dp"
            android:textStyle="normal|italic"
            android:visibility="gone" />

        <TextView
            android:id="@+id/astroEventDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2011-01-04"
            android:textSize="14dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/astroEventPeakTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peak time: 08:51:42"
            android:textSize="12dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/astroEventZhrTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12dp"
            android:textStyle="normal"
            android:visibility="gone" />

        <TextView
            android:id="@+id/astroEventVisTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real visibility: partial"
            android:textSize="12dp"
            android:textStyle="normal"
            android:visibility="gone" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:tint="@color/colorTextDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_dialog_info" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>