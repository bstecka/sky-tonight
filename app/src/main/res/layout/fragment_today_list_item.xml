<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/astroObjectImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="centerInside"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/astroObjectNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/astroObjectAltTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/astro_object_alt"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/astroObjectAzTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/astro_object_az"
            android:textStyle="normal" />

    </LinearLayout>
</LinearLayout>